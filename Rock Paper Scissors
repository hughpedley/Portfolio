//Rock Paper Scissors game

//Begin setting up variables to repeat play until 5 wins
var keepPlaying=true;
var userWins=0;
var compWins=0;


while(keepPlaying==true){

	//Set userChoice here
	var userChoice=prompt("Rock, paper, or scissors?".toLowerCase();)

	//Set computerChoice here
	var computerChoice=Math.random();
		if(computerChoice<.34) 
			{computerChoice="paper";}
		else if(computerChoice<=.67) 
			{computerChoice="rock";}
		else
			{computerChoice="scissors";}

	//State the computerChoice variable
	console.log("Computer's choice: " + computerChoice);

	//Function determines a winner and adds to a win total
	var compare = function(choice1, choice2) 
		{if(choice1===choice2)
			{return "The result is a tie! Please go again.";}
		else if(choice1==="rock") 
			{if(choice2==="scissors")
				{return "Rock wins!";
				userWins++;}
			else{return "Paper wins!";
				compWins++;}}
		else if (choice1==="paper")
			{if(choice2==="rock")
				{return "Paper wins!";
				userWins++;}
			else{return "Scissors wins!";
				compWins++;}}
		else if(choice1==="scissors")
			{if(choice2==="rock")
				{return "Rock wins!";
				compWins++;}
			else{return "Scissors wins!";
				userWins++;}}
	};

	//Run the function and tell the score
	compare(userChoice, computerChoice);
	console.log("The score is " + userWins "for you, and " + compWins + "for the computer! Try and be the first to five!");
}

//Determine whether or not to play again. Should start over the game or do nothing.
if(userWins===5 || compWins===5)
	{var endGame = prompt("Game over! The final score is you, with " + userWins + "vs. the computer, with " + compWins + "wins. Would you like to play again?".toLowerCase(););
		if(endGame=yes){
			keepPlaying=true;
			userWins=0;
			compWins=0;}
		else{keepPlaying=false;}
	};
